 <div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="content-wrapper d-flex align-items-center auth px-0">
            <div class="row w-100 mx-0">
                <div class="col-lg-4 mx-auto">
                    <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                        <div class="brand-logo">
                            <img src="~/images/logoprasarnet.png" alt="logo">
                        </div>

                        <form class="pt-3">
                            <div>
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <span>Hello, User @User.Identity.Name!</span>
                                    <a class="btn btn-block btn-secondary btn-sm mt-3" asp-controller="Account" asp-action="Logout">Logout</a>
                                }
                                else
                                {
                                    <div class="mt-3">
                                        <a class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" asp-area="" asp-controller="Account" asp-action="Login">Go to Dashboard</a>
                                    </div>
                                }
                            </div>

                        </form>

                    </div>
                </div>
            </div>
        </div>
        <!-- content-wrapper ends -->
    </div>
    <!-- page-body-wrapper ends -->
</div>