    $(document).on('click', '.delete-training', function () {
        var id = $(this).data('id');
        if (confirm('Are you sure you want to delete this training record?')) {
            $.ajax({
                url: '/TRAM/Tram/DeleteTraining',
                type: 'POST',
                data: { id: id },
                success: function (res) {
                    if (res.success) {
                        $.get('/TRAM/Tram/GetTrainingRecords', function (data) {
                            $('#trainingContainer').html(data);
                        });
                    } else {
                        alert('Delete failed.');
                    }
                },
                error: function () {
                    alert('Server error while deleting.');
                }
            });
        }
    });


    $('#trainingModalForm').submit(function (e) {
        e.preventDefault();
        var $btn = $(this).find('button[type="submit"]');
        $btn.prop('disabled', true);

        $.ajax({
            url: '/TRAM/Tram/SaveTraining',
            type: 'POST',
            data: $(this).serialize(),
            success: function (res) {
                if (res.success) {
