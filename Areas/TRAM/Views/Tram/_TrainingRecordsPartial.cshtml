                    $.get('/TRAM/Tram/GetTrainingRecords', function (data) {
                        $('#trainingContainer').html(data);
                    });
                } else {
                    alert(res.message || 'Save failed.');
                }
            },
            error: function () {
                alert('Server error during training save.');
            },
            complete: function () {
                $btn.prop('disabled', false);
            }
        });
    });

