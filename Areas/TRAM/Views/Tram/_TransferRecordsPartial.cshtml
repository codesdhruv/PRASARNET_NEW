@model IEnumerable<PRASARNET.Areas.TRAM.Models.TransferPostingModel>

<div class="d-flex justify-content-between align-items-center my-2">
    <h5 class="mb-0 fs-title">Transfer Posting Record</h5>
    <button type="submit" class="btn btn-success btn-sm">Add Transfers</button>
</div>

<table class="table table-bordered mt-2">
    <thead>
        <tr>
            <th>Wing</th>
            <th>Designation</th>
            <th>From</th>
            <th>To</th>
            <th>Transfer Type</th>
            <th>Organization</th>
            <th>Station</th>
            <th>Info</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody id="transferList">
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Wing</td>
                    <td>@item.DesignationName</td>
                    <td>@item.FromDate.ToString("dd-MMM-yyyy")</td>
                    <td>@item.ToDate</td>
                    <td>@item.TransferByDepOwn</td>
                    <td>@item.OrganizationName</td>
                    <td>@item.StationName</td>
                    <td>@item.AddInfo</td>
                    <td>
                        <button class="btn btn-sm btn-danger delete-transfer" data-id="@item.Id">Delete</button>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="9" class="text-center text-danger font-weight-bold">No Record(s) Found..</td>
            </tr>
        }
    </tbody>
</table>

<script>
    $(document).on('click', '.delete-transfer', function () {
        var id = $(this).data('id');
        if (confirm('Are you sure you want to delete this transfer record?')) {
            $.ajax({
                url: '/TRAM/Tram/DeleteTransfer',
                type: 'POST',
                data: { id: id },
                success: function (res) {
                    if (res.success) {
                        $.get('/TRAM/Tram/GetTransferRecords', function (html) {
                            $('#transferContainer').html(html);
                        });
                    } else {
                        alert(res.message || 'Delete failed.');
                    }
                },
                error: function () {
                    alert('Server error while deleting transfer record.');
                }
            });
        }
    });
</script>
