@model IEnumerable<PRASARNET.Areas.MasterMng.Models.Roles>


<div class="content-wrapper">

    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white rounded-top-3">
            <h2 class="mb-1">State List</h2>
        </div>
        <div class="card-body">

            <!-- Create New Button with a more prominent style and aligned right -->
            <a href="/MasterMng/Role/RoleCreate" class="btn btn-success btn-sm my-2 float-right">
                <i class="mdi mdi-plus"></i> Create New Role
            </a>

            <!-- Table with Bootstrap 4 and DataTable enhancements -->
            <div class="table-responsive">
                <table id="statesTable" class="table table-striped table-bordered">
                    <thead class="thead-dark">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.RoleName)</th>
                            <th>@Html.DisplayNameFor(model => model.IsActive)</th>
                            <th>@Html.DisplayNameFor(model => model.CreatedAt)</th>
                            <th>@Html.DisplayNameFor(model => model.UpdatedAt)</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var role in Model)
                        {
                            <tr>
                                <td>@role.RoleName</td>
                                <td>@role.IsActive</td>
                                <td>@role.CreatedAt?.ToString("g")</td>
                                <td>@role.UpdatedAt?.ToString("g")</td>
                                <td>
                                    
                                    <a href="/MasterMng/Role/RoleDetails/@role.RoleID" class="btn btn-info btn-sm">Details</a>
                                    <a href="/MasterMng/Role/RoleEdit/@role.RoleID" class="btn btn-warning btn-sm">Edit</a>
                                    <a href="/MasterMng/Role/RoleDelete/@role.RoleID" class="btn btn-danger btn-sm"
                                       onclick="return confirm('Are you sure you want to delete role : @role.RoleName ? \nAll Assigned permissions to @role.RoleName will also be deleted !');">
                                        <i class="mdi mdi-delete-outline"></i> Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>

