@using PRASARNET.Areas.MasterMng.Models
@{
    ViewData["Title"] = "StateList";
}

@model List<State>

<div class="content-wrapper">

    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white rounded-top-3">
            <h2 class="mb-1">State List</h2>
        </div>
        <div class="card-body">

            <!-- Create New Button with a more prominent style and aligned right -->
            <a href="/MasterMng/Masters/StateCreate" class="btn btn-success btn-sm my-2 float-right">
                <i class="mdi mdi-plus"></i> Create New
            </a>

            <!-- Table with Bootstrap 4 and DataTable enhancements -->
            <div class="table-responsive">
                
                 <table id="statesTable" class="table table-striped table-bordered">
                    <thead class="thead-dark">
                        <tr>
                            <th>State ID</th>
                            <th>Name</th>
                            <th>Zone</th>
                            <th>Type</th>
                            <th>Active</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var state in Model)
                        {
                            <tr>
                                <td>@state.StateID</td>
                                <td>@state.StateName</td>
                                <td>@state.ZoneID</td>
                                <td>@state.IsState</td>
                                <td>@state.IsActive</td>
                                <td>
                                    <div class="btn-group">
                                        <a href="/MasterMng/Masters/StateDetails/@state.StateID" class="btn btn-info btn-sm">
                                            <i class="mdi mdi-information-outline"></i> Details
                                        </a>
                                        <a href="/MasterMng/Masters/StateEdit/@state.StateID" class="btn btn-warning btn-sm mx-1">
                                            <i class="mdi mdi-pencil-outline"></i> Edit
                                        </a>
                                        <a href="/MasterMng/Masters/StateDelete/@state.StateID" class="btn btn-danger btn-sm"
                                           onclick="return confirm('Are you sure you want to delete this @state.StateName ?');">
                                            <i class="mdi mdi-delete-outline"></i> Delete
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>