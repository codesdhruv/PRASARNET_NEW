@model IEnumerable<StationTypeModel>

<div class="content-wrapper">

    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white rounded-top-3">
            <h2 class="mb-1">Station Types</h2>
        </div>
        <div class="card-body">

            <p>
                <a asp-action="Create" class="btn btn-success float-right my-2">Add New Station Type</a>
            </p>
            <div class="table-responsive">

                <table id="statesTable" class="table table-striped table-bordered">
                    <thead class="thead-dark">
                        <tr>
                            <th>Station Type</th>
                            <th>Abbreviation</th>
                            <th>Organization</th>
                            <th>Is Active</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.StationType</td>
                                <td>@item.Abbreviation</td>
                                <td>@item.OrganizationName</td>
                                <td>@(item.IsActive ? "Yes" : "No")</td>
                                <td>
                                    <a asp-action="Details" asp-route-id="@item.StationTypeId" class="btn btn-sm btn-info">Details</a>
                                    <a asp-action="Edit" asp-route-id="@item.StationTypeId" class="btn btn-warning btn-sm">Edit</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

