@model PRASARNET.Areas.MasterMng.Models.StationTypeModel

<div class="content-wrapper p-4">

    <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white rounded-top-3">
            <h2 class="mb-1">Station Type Details</h2>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Organization</dt>
                <dd class="col-sm-9">@Model.OrganizationName</dd>

                <dt class="col-sm-3">Station Type</dt>
                <dd class="col-sm-9">@Model.StationType</dd>

                <dt class="col-sm-3">Abbreviation</dt>
                <dd class="col-sm-9">@Model.Abbreviation</dd>

                <dt class="col-sm-3">Remarks</dt>
                <dd class="col-sm-9">@Model.Remarks</dd>

                <dt class="col-sm-3">Is Active</dt>
                <dd class="col-sm-9">@((Model.IsActive) ? "Yes" : "No")</dd>
            </dl>

            <div>
                <a asp-action="StationTypeList" class="btn btn-secondary">Back to List</a>
                <a asp-action="Edit" asp-route-id="@Model.StationTypeId" class="btn btn-warning">Edit</a>
            </div>
        </div>
    </div>

</div>

