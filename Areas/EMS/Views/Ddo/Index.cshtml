@{
    ViewData["Title"] = "EMS DDO Profile";
    Layout = "_LayoutEMS";
}


<div class="content-wrapper">
    <div class="row">
        <div class="col-md-12 grid-margin">
            <div class="row">
                <div class="col-12 col-xl-9 mb-4 mb-xl-0">
                    <h3 class="font-weight-bold">Welcome DDO</h3>
                    <h6 class="font-weight-normal">Last date for Submitting R&P accounts for previous month is :  <span class="text-primary">12th</span></h6>
                    <h6 class="font-weight-normal mb-0">Salary Demand for CURRENT Month & OAE Demand for NEXT Month can be Projected between : 6 - 16 </h6>
                </div>
                <div class="col-12 col-xl-3">
                    <div class="justify-content-end d-flex">
                        <div class="dropdown flex-md-grow-1 flex-xl-grow-0">
                            <button class="btn btn-sm btn-light bg-white dropdown-toggle" type="button" id="dropdownMenuDate2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                                <i class="mdi mdi-calendar"></i> Today (10 Jan 2021)
                            </button>
                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuDate2">
                                <a class="dropdown-item" href="#">January - March</a>
                                <a class="dropdown-item" href="#">March - June</a>
                                <a class="dropdown-item" href="#">June - August</a>
                                <a class="dropdown-item" href="#">August - November</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row d-flex justify-content-evenly">
        <div class="col-md-6 grid-margin stretch-card">
            <div class="card tale-bg">
                <div class="card-people">
                    <img src="~/images/banner2.webp" alt="people">
                </div>
            </div>
        </div>

        <div class="col-md-4 stretch-card grid-margin transparent">
            <div class="card">
                <div class="card-body">
                    <p class="card-title">Notifications</p>
                    <ul class="icon-data-list">
                        <li>
                            <div class="d-flex">
                                <img src="~/images/circular_icon.png" alt="news">
                                <div>
                                    <p class="mb-0">FAQ'S on R&P Account(EMS)</p>
                                </div>
                            </div>
                        </li>
                        <li>
                            <div class="d-flex">
                                <img src="~/images/circular_icon.png" alt="news">
                                <div>
                                    <p class="mb-0">Surrender amount of TSA</p>
                                </div>
                            </div>
                        </li>
                        <li>
                            <div class="d-flex">
                                <img src="~/images/circular_icon.png" alt="news">
                                <div>
                                    <p class="mb-0">SBI Concession Charges</p>
                                </div>
                            </div>
                        </li>
                        <li>
                            <div class="d-flex">
                                <img src="~/images/circular_icon.png" alt="news">
                                <div>
                                    <p class="mb-0">Guidlines of Annual Accounts for the Financial Year 2023-24</p>
                                </div>
                            </div>
                        </li>
                        <li>
                            <div class="d-flex">
                                <img src="~/images/circular_icon.png" alt="news">
                                <div>
                                    <p class="mb-0">Accounting Instructions for the Financial Year 2023-24</p>
                                </div>
                            </div>
                        </li>
                        <li>
                            <div class="d-flex">
                                <img src="~/images/circular_icon.png" alt="news">
                                <div>
                                    <p class="mb-0">New Formats of EMS Introduced from April 2023 as per Circular 20</p>
                                    <small>New</small>
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>



    <div class="row justify-content-end mx-5">
        <div class="col-md-4 stretch-card grid-margin grid-margin-md-0">
            <div class="card data-icon-card-primary">
                <div class="card-body">
                    <div class="row">
                        <div class="col-8 text-white">
                            <h3>Reminder</h3>
                            <p class="text-white font-weight-500 mb-0">Do not send hard copy of R&P Statement to Prasar Bharati . </p>
                        </div>
                        <div class="col-4 background-icon">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>