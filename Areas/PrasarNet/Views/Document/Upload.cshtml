@model PRASARNET.Areas.PrasarNet.Models.UploadViewModel


    <div class="content-wrapper">
        <h2>Upload Document</h2>

        <!-- Success/Error Alerts -->
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["Success"]
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["Error"]
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }

        <form asp-action="Upload" asp-controller="Document" enctype="multipart/form-data" method="post">
            <div class="form-group">
                <label asp-for="DocumentTitle" class="control-label">Title</label>
                <input asp-for="DocumentTitle" class="form-control" />
                <span asp-validation-for="DocumentTitle" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DocumentFile" class="control-label">Select Document</label>
                <input asp-for="DocumentFile" class="form-control-file" accept=".pdf,.doc,.docx" />
                <span asp-validation-for="DocumentFile" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Upload</button>
        </form>
    </div>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
